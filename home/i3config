set $mod Mod4
set $alt Mod1

set $bg #121212
set $fg #f3e2ec
set $second #444444
set $first #ca9ee9
set $urgent #ca9ee9

# Autostarts
exec_always nitrogen --restore
exec_always --no-startup-id "pkill dunst; dunst"

# Control the system
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit
bindsym $mod+Shift+s exec systemctl suspend

# Move focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
focus_wrapping no

# (this probably doesn't work the way I want)
bindsym $alt+Tab focus next
bindsym $alt+Shift+Tab focus next

bindsym $mod+BackSpace focus mode_toggle

# ...but keep the mouse out of it
focus_follows_mouse no
mouse_warping none

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+v split vertical

bindsym $mod+f fullscreen toggle
bindsym $mod+r layout toggle split
bindsym $mod+e layout stacking
bindsym $mod+Shift+BackSpace floating toggle

# ...with the mouse
floating_modifier $mod

# Resize windows
bindsym $mod+Control+h resize grow left 2 px or 2 ppt
bindsym $mod+Control+j resize grow down 2 px or 2 ppt
bindsym $mod+Control+k resize grow up 2 px or 2 ppt
bindsym $mod+Control+l resize shrink left 2 px or 2 ppt

# Kill windows
bindsym $mod+q kill
bindsym $mod+Shift+q exec xkill -id `xprop -root _NET_ACTIVE_WINDOW | cut -d\# -f2`

# Launch programs
bindsym $mod+d exec rofi -show drun
bindsym $mod+Shift+d exec rofi -show run
bindsym $mod+s exec rofi -show ssh
bindsym $mod+m exec rofimoji

bindsym $mod+Return exec kitty

# configure window decoration
default_border pixel 4
default_floating_border normal 4
smart_borders on

gaps inner 20
gaps outer 0 
smart_gaps on
smart_borders on

# class                 border  backgr. text    indicator child_border
client.focused          $first  $first  $bg     $first    $first 
client.focused_inactive $second $second $bg     $second   $second
client.unfocused        $bg     $bg     $fg     $bg       $bg    
client.urgent           $urgent $bg     $urgent $urgent   $urgent
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       $bg

title_align center

# font for titles
font pango:VictorMono Nerd Font Mono Bold 11

set $lmon DP-2
set $rmon DP-0
set $3mon HDMI-0

set $ws1 "1: www"
set $ws2 "2: www"
set $ws3 "3: steam"
set $ws4 "4: discord"
set $ws5 "5: code"
set $ws6 "6: docs"
set $ws7 "7: plex"
set $ws8 "8: music"
set $ws9 "9: nine"
set $ws10 "10: ten"

workspace $ws1 output $lmon
workspace $ws2 output $rmon
workspace $ws3 output $lmon
workspace $ws4 output $rmon
workspace $ws5 output $lmon
workspace $ws6 output $rmon
workspace $ws7 output $3mon
workspace $ws8 output $rmon
workspace $ws9 output $lmon
workspace $ws10 output $rmon

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
# alternate
bindsym $alt+u workspace $ws1
bindsym $alt+o workspace $ws2
bindsym $alt+i workspace $ws3
bindsym $alt+p workspace $ws4
bindsym $alt+comma workspace $ws5
bindsym $alt+period workspace $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
# alternate
bindsym $alt+Shift+u move container to workspace $ws1
bindsym $alt+Shift+o move container to workspace $ws2
bindsym $alt+Shift+i move container to workspace $ws3
bindsym $alt+Shift+p move container to workspace $ws4
bindsym $alt+Shift+comma move container to workspace $ws5
bindsym $alt+Shift+period move container to workspace $ws6
